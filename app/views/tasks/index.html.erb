<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Low estimate cache</th>
    <th>High estimate cache</th>
    <th>Completed</th>
    <th>User</th>
    <th>Due</th>
    <th>Start</th>
    <th>End</th>
    <th>Start in days</th>
    <th>End in days</th>
    <th>Estimate</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.title %></td>
    <td><%= task.description %></td>
    <td><%= task.low_estimate_cache %></td>
    <td><%= task.high_estimate_cache %></td>
    <td><%= task.completed %></td>
    <td><%= task.user_id %></td>
    <td><%= task.due %></td>
    <td><%= task.start %></td>
    <td><%= task.end %></td>
    <td><%= task.start_in_days %></td>
    <td><%= task.end_in_days %></td>
    <td><%= task.estimate %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

